<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login.LoginCrearCuentaPrimerPaso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="40sp"
            android:src="@drawable/icons8_izquierda_circulo_48"
            android:onClick="regresarCambiarPasswordSegundoPaso"
            />

        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:text="Cambia tu contraseña"
            android:textColor="@color/light_green"
            android:textSize="40sp"
            android:textStyle="bold"/>
        <LinearLayout
            android:backgroundTint="#FBF5F0"
            android:layout_gravity="center_horizontal"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@drawable/border_form"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginStart="20sp"
                android:text="Nueva contraseña"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_gravity="center_horizontal"
                android:hint="Nueva contraseña"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/person_24px"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLength="20"/>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_marginStart="20sp"
                android:text="Confirmar contraseña"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320sp"
                android:layout_marginTop="5sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Repetir contraseña"
                app:startIconDrawable="@drawable/group_24px"
                app:endIconMode="password_toggle"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:maxLength="20"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/continuar2"
                android:onClick="cambiarPasswordFinal"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18sp"
                android:backgroundTint="@color/light_green"
                android:text="  Finalizar  "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="12sp"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>