<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login.LoginCrearCuentaPrimerPaso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="RegresarCrearCuenta"
            android:layout_marginStart="5sp"
            android:layout_marginTop="40sp"
            android:src="@drawable/icons8_izquierda_circulo_48"
            />

        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="372dp"
            android:layout_marginStart="20sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Completa tus datos"
            android:textColor="@color/light_green"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:backgroundTint="#FBF5F0"
            android:layout_gravity="center_horizontal"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:background="@drawable/border_form"
            android:orientation="vertical" >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_gravity="center_horizontal"
                android:hint="Tipo de documento"
                app:startIconDrawable="@drawable/person_24px"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:inputType="text"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_gravity="center_horizontal"
                android:hint="Documento"
                app:startIconDrawable="@drawable/group_24px"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:inputType="number"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_gravity="center_horizontal"
                android:hint="TelÃ©fono"
                app:startIconDrawable="@drawable/mail_24px"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="9"
                    android:inputType="number"
                    android:singleLine="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/continuar2"
                android:onClick="CrearCuenta3"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18sp"
                android:backgroundTint="@color/light_green"
                android:text="  Continuar  "
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="12sp"/>
        </LinearLayout>

    </LinearLayout>


</FrameLayout>