<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_marginTop="35sp"
    android:layout_height="1000sp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentoPrincipalRepartidor"
            android:name="com.example.project_iot.ClienteFragments.vistaPrincipalCliente"
            android:layout_width="match_parent"
            android:layout_height="800sp"
            tools:layout="@layout/fragment_repartidor_lista_pedidos_posibles"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_marginTop="0sp"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>




    <!--app:labelVisibilityMode="unlabeled"-->
</androidx.constraintlayout.widget.ConstraintLayout>