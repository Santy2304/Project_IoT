<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login.LoginCrearCuentaPrimerPaso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginTop="15sp"
                android:src="@drawable/icons8_izquierda_circulo_48"
                android:onClick="RegresarCrearCuenta2"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/noti_button"
                style="?attr/floatingActionButtonSmallStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="240sp"
                android:layout_marginTop="15sp"
                android:onClick="vistaNotificaciones"
                android:backgroundTint="@color/light_green"
                android:contentDescription="Notificaciones"
                app:srcCompat="@drawable/notifications_24px"
                app:tint="@color/white" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/shapeableImageView3"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_marginStart="8sp"
                android:scaleType="centerCrop"
                android:layout_marginTop="15sp"
                android:onClick="verRepartidorTrackingEstadoEnPreparacion"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                app:srcCompat="@drawable/hineilll" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10sp"
                android:layout_marginStart="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pedido #32"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="55sp"
                android:layout_marginTop="8sp"
                android:text="Recibido"
                android:textStyle="bold"
                android:textSize="23sp"
                android:backgroundTint="@color/switch_track_color_inactive"
                android:textColor="@color/black"
                />

        </LinearLayout>


        <ImageView
            android:layout_width="400sp"
            android:layout_height="550sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"
            android:scaleType="centerCrop"
            android:src="@drawable/mapa" />

        <LinearLayout
            android:backgroundTint="#FBF5F0"
            android:layout_gravity="center_horizontal"
            android:layout_width="390sp"
            android:layout_height="50sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/border_form"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="Dirección  restaurante:"/>
            <TextView
                android:layout_width="250sp"
                android:layout_marginStart="10sp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text=" Av. Antonio José de Sucre 499"/>


        </LinearLayout>

    </LinearLayout>


</FrameLayout>