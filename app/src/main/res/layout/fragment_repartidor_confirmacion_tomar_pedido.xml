<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginCambiarPasswordFinal">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="300sp"
            android:layout_marginTop="150sp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/light_green"
            android:textSize="33sp"
            android:text="Ahora te encuentras a cargo del pedido #32"
            />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView3"
            android:layout_marginTop="35sp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.442"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            app:srcCompat="@drawable/exito_tomar_pedido" />


        <Button
            android:id="@+id/ola"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70sp"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:backgroundTint="@color/light_green"
            android:gravity="center"
            android:text="Continuar"
            android:textColor="@color/white"
            android:onClick="saltarInicioSesion"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.868" />




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>