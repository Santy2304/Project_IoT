<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login.LoginCrearCuentaPrimerPaso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="40sp"
            android:src="@drawable/icons8_izquierda_circulo_48"
            android:onClick="RegresarCrearCuenta3"
            />

        <TextView
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="¿Qué rol te gustaría ser?"
            android:textAlignment="center"
            android:textColor="@color/light_green"
            android:textSize="40sp"
            android:textStyle="bold"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_cliente"
                android:layout_marginStart="70sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/border_form"
                android:layout_width="135sp"
                android:layout_height="170sp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/gray"
                app:strokeWidth="2sp"
                app:checkedIcon="@drawable/mapa"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_marginTop="10sp"
                        android:layout_height="120sp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/cliente"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:text="Cliente"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"

                        android:textColor="@android:color/black"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_repartidor"
                android:layout_marginStart="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/border_form"
                android:layout_width="135sp"
                android:layout_height="170sp"
                app:cardCornerRadius="8dp"
                app:strokeColor="@color/gray"
                app:strokeWidth="2sp"
                app:checkedIcon="@drawable/mapa"
                android:clickable="true"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="120sp"
                        android:layout_marginTop="10sp"
                        android:layout_height="150sp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/repartidor_2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-25sp"
                        android:text="Repartidor"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:textSize="20sp"

                        android:textColor="@android:color/black"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="2sp"
                android:layout_marginLeft="35sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/light_green"
                android:text="Importante:"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="8sp"
                android:textColor="@color/colorCustomColor1"
                android:text="Ambas opciones son excluyentes. Si elijes ser repartidor no podrás realizar pedidos de comida"
                />
        </LinearLayout>


        <Button
            android:id="@+id/continuar1"
            android:onClick="CrearCuenta5"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18sp"
            android:backgroundTint="@color/light_green"
            android:text="  Continuar  "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12sp"/>
    </LinearLayout>


</FrameLayout>