                                            android:layout_height="40dp"
                                            android:layout_marginStart="10sp"
                                            android:contentDescription="Activar"
                                            app:backgroundTint="@color/light_green"
                                            app:srcCompat="@drawable/baseline_check_circle_24"
                                            app:tint="@color/white" />

                                    </LinearLayout>


                                    <LinearLayout
