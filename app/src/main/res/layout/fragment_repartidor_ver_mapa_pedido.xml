<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RepartidorFragments.RepartidorVerMapaPedido">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:layout_marginTop="4sp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icons8_izquierda_circulo_48"
            android:onClick="verPedidos"/>
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mapa de pedido #32"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:layout_marginTop="3sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            />

        <ImageView
            android:layout_marginTop="20sp"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:layout_width="370sp"
            android:layout_height="550sp"
            android:src="@drawable/mapa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginStart="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="250sp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Destino Tienda:"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="130sp"
                        android:layout_marginStart="5sp"
                        android:layout_height="match_parent"
                        android:text="Av.Antonio JosÃ© Sucre 499"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Destino Final:"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_marginStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Destino Tienda: "
                        android:textColor="@color/black"
                        />
                </LinearLayout>

            </LinearLayout>

            <Button
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="155sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="-10sp"
                android:backgroundTint="@color/light_green"
                android:text="Aceptar pedido"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                app:iconSize="25sp"
                app:icon="@drawable/intento"
                android:onClick="verRepartidorRechazarTomarPedido"
                />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>