<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Login.LoginCrearCuentaPrimerPaso">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginTop="40sp"
            android:src="@drawable/icons8_izquierda_circulo_48"
            android:onClick="saltarInicioSesion"/>

        <TextView
            android:layout_marginTop="15sp"
            android:layout_width="372dp"
            android:layout_marginStart="20sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Completa tus datos para comenzar"
            android:textColor="@color/light_green"
            android:textSize="40sp"
            android:textStyle="bold"/>

    <LinearLayout
        android:backgroundTint="#FBF5F0"
        android:layout_gravity="center_horizontal"
        android:layout_width="348dp"
        android:layout_height="379dp"
        android:layout_marginTop="40sp"
        android:background="@drawable/border_form"
        android:orientation="vertical" >

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_gravity="center_horizontal"
            android:hint="Nombre"
            app:startIconDrawable="@drawable/person_24px"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_gravity="center_horizontal"
            android:hint="Apellido"
            app:startIconDrawable="@drawable/group_24px"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="20"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_gravity="center_horizontal"
            android:hint="Tipo de documento"
            app:startIconDrawable="@drawable/mail_24px"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:entries="@array/elementos"
            android:spinnerMode="dropdown" />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:layout_gravity="center_horizontal"
            android:hint="NÃºmero de documento"
            app:startIconDrawable="@drawable/mail_24px"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>






    </LinearLayout>





    </LinearLayout>


</FrameLayout>